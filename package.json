{
  "name": "mcp-earthquake-server",
  "version": "1.0.0",
  "description": "MCP server for IRIS seismological data and GNSS earthquake monitoring",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run build && node --test test/earthquake-analyzer.test.js",
    "test:all": "npm run build && node --test test/*.test.js",
    "test:live": "npm run build && node --test test/live-data-validation.test.js",
    "test:integration": "npm run build && node --test test/mcp-integration.test.js",
    "test:quality": "npm run build && node --test test/anti-hallucination.test.js"
  },
  "keywords": [
    "mcp",
    "earthquake",
    "seismic",
    "iris",
    "gnss",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@turf/boolean-point-in-polygon": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "world-countries": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
